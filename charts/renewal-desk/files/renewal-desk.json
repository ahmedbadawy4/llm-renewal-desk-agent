{
  "id": null,
  "uid": "renewal-desk",
  "title": "Renewal Desk",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 2,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Request rate (req/s)",
      "targets": [
        {
          "expr": "sum(rate(api_requests_total[5m]))",
          "legendFormat": "requests"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Latency p95 (s)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(api_request_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "fieldConfig": {"defaults": {"unit": "s"}}
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Error rate (5xx %)",
      "targets": [
        {
          "expr": "sum(rate(api_requests_total{status=~\"5..\"}[5m])) / sum(rate(api_requests_total[5m])) * 100",
          "legendFormat": "error_rate"
        }
      ],
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Agent requests by status",
      "targets": [
        {
          "expr": "sum(rate(agent_requests_total[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ],
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Token usage (per sec)",
      "targets": [
        {
          "expr": "sum(rate(agent_tokens_total[5m])) by (direction)",
          "legendFormat": "{{direction}}"
        }
      ],
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8}
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Request rate by path",
      "targets": [
        {
          "expr": "sum(rate(api_requests_total[5m])) by (path)",
          "legendFormat": "{{path}}"
        }
      ],
      "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8}
    }
  ]
}
